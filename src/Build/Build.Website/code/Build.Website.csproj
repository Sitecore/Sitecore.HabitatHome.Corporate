<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net471</TargetFramework>
    <Configurations>Debug;Release;Local;Package-CM;Package-CD;DockerDeploy</Configurations>
    <ApplicationIcon />
    <OutputType>Exe</OutputType>
    <StartupObject />
    <AssemblyName>Build.Website</AssemblyName>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Sitecore.Demo.Feature.Account" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Feature.Demo" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Feature.Email" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Feature.Forms" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Foundation.Accounts" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Foundation.Alerts" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Foundation.Cdn" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Foundation.DependencyInjection" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Foundation.Dictionary" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Foundation.Serialization" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Foundation.SitecoreExtensions" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Foundation.Workflow" Version="9.2.0.63" />
    <PackageReference Include="Sitecore.Demo.Project.Website" Version="9.2.0.63" />
  </ItemGroup>

  <Choose>
    <When Condition=" '$(Configuration)'=='Local' ">
      <ItemGroup>
        <Reference Include="Sitecore.Kernel">
          <HintPath>..\..\..\..\lib\Sitecore.Kernel.dll</HintPath>
        </Reference>
        <Reference Include="Sitecore.Kernel">
          <HintPath>..\..\..\..\lib\Sitecore.Update.dll</HintPath>
        </Reference>
        <Reference Include="Sitecore.Kernel">
          <HintPath>..\..\..\..\lib\Sitecore.Zip.dll</HintPath>
        </Reference>
        <Reference Include="Sitecore.Kernel">
          <HintPath>..\..\..\..\lib\Sitecore.Logging.dll</HintPath>
        </Reference>
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="Sitecore.Kernel" Version="9.2.0-*">
          <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Sitecore.Zip" Version="9.2.0-*">
          <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Sitecore.Update" Version="9.2.0-*">
          <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Sitecore.Logging" Version="9.2.0-*">
          <PrivateAssets>all</PrivateAssets>
        </PackageReference>
      </ItemGroup>
    </Otherwise>
  </Choose>
  <!-- Avoid copying the NuGet packages Sitecore.Kernel.dll in the project bin folder and override the one in the Sitecore instance bin folder -->
  <Target Name="PreventSitecoreKernelCopyLocal" AfterTargets="ResolveReferences">
    <ItemGroup>
      <ReferenceCopyLocalPaths Remove="@(ReferenceCopyLocalPaths)" Condition="'%(ReferenceCopyLocalPaths.NuGetPackageId)' == 'Sitecore.Kernel'" />
    </ItemGroup>
  </Target>
</Project>
