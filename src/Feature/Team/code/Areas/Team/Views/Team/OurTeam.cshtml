@using Sitecore.Demo.Shared.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Links
@using Sitecore.Data.Items
@using Sitecore.Demo.Shared.Foundation.Dictionary.Extensions
@model Sitecore.Mvc.Presentation.RenderingModel


<div class="container">
    <div class="row">
        @foreach (Item item in Model.Item.GetChildren())
        {
            var url = LinkManager.GetItemUrl(item);
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-0 shadow">
                    <a href="@url">
                        @Html.Sitecore().ImageField(Sitecore.HabitatHome.Feature.Team.Templates.MemberInfo.Fields.TeamMemberPhoto, item, 0, 500, "card-img-top", false)
                    </a>
                    <div class="card-body text-center">
                        <h5 class="card-title mb-0">
                            @Html.Sitecore().Field(Sitecore.HabitatHome.Feature.Team.Templates.MemberInfo.Fields.TeamMemberName, item)
                        </h5>
                        <div class="card-text text-black-50">
                            @Html.Sitecore().Field(Sitecore.HabitatHome.Feature.Team.Templates.MemberInfo.Fields.TeamMemberTitle, item)
                        </div>
                    </div>
                    <div class="card-body text-center">
                        <a href="@url" class="link_arrow">
                            @Html.Sitecore().Dictionary("/Buttons/Read More", "Read more")
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>