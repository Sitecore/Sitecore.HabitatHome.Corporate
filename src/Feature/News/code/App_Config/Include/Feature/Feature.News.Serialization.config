<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/"
               xmlns:role="http://www.sitecore.net/xmlconfig/role/"
               xmlns:unicorn="http://www.sitecore.net/xmlconfig/unicorn/">
    <sitecore unicorn:require="Enabled">
        <unicorn>
            <configurations>
              <configuration name="Feature.News" description="Feature News" dependencies="Foundation.*" extends="Helix.Feature">
                <targetDataStore physicalRootPath="$(corporateSourceFolder)\Feature\News" useDataCache="false" singleInstance="true" />
                <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance="true">
                  <include name="Templates" database="master" path="/sitecore/templates/Feature/Demo Shared/News" />
                  <include name="Renderings" database="master" path="/sitecore/layout/Renderings/Feature/Demo Shared/News" />
                </predicate>
              </configuration>
            </configurations>
        </unicorn>
    </sitecore>
</configuration>